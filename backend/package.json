     "jsonwebtoken": "^9.0.0"         
   },
   "devDependencies": {
     "@types/node": "^18.16.3",       
     "@types/express": "^4.17.17",    
     "@types/cors": "^2.8.13",        
     "@types/bcryptjs": "^2.4.2",     
     "@types/jsonwebtoken": "^9.0.2", 
     "prisma": "^5.0.0",              
     "ts-node": "^10.9.1",            
